<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightest_orange"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include
        layout="@layout/toolbar_cyberfruit"
        android:id="@+id/toolbar" />

    <!-- Button for FruitScannerActivity -->
    <Button
        android:id="@+id/btnActivity"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:textSize="16dp"
        android:layout_marginTop="180dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/poppins_bold"
        android:onClick="openFruitScannerActivity"
        android:text="Fruit Scanner"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"/>

    <!-- Button for Fruit Categories -->
    <Button
        android:id="@+id/btnActivity2"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:textSize="16dp"
        android:text="Fruit Categories"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_bold"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="25dp"
        android:onClick="openFruitCategoriesActivity"
        android:layout_gravity="center_horizontal"/>

    <!-- Button for About Us -->
    <Button
        android:id="@+id/btnActivity3"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:textSize="16dp"
        android:text="About Us"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_bold"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="25dp"
        android:onClick="openAboutUsActivity"
        android:layout_gravity="center_horizontal"/>

    <!-- Horizontal LinearLayout for circles -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <!-- Circle 1 -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle_1" />

        <!-- Circle 2 -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle_2" />

        <!-- Circle 3 -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle_3" />

        <!-- Circle 4 -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle_4" />

        <!-- Circle 5 -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/circle_5" />

    </LinearLayout>
</LinearLayout>
