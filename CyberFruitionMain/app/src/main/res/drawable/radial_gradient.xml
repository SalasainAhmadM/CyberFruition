<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="0dp" android:left="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#f45389"
                android:endColor="#4cb8c4"
                android:angle="135"/>
        </shape>
    </item>


    <item android:bottom="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#4cb8c4"
                android:endColor="#f45389"
                android:angle="315"/>
        </shape>
    </item>
</layer-list>
